@require 'constants.styl'


input-box-shadow = 0 0 15px 0 rgb(24, 19, 3) inset, 0 0 10px 0 rgba(162, 116, 14, 0.7)
input-bg = linear-gradient(20deg, rgba(45, 36, 13, 0.4) 0%, rgba(62, 39, 17, 0.6) 50%, rgba(38, 30, 11, 0.4) 100%) 50% 50% no-repeat

.form
    margin-top 100px
    padding 40px 30px
    box-sizing border-box
    width 100%
    max-width 460px
    border-radius 7px
    background linear-gradient(20deg, rgba(84, 67, 24, 0) 0%, rgb(88, 58, 24) 50%, rgba(84, 67, 24, 0) 100%) 50% 50% no-repeat
    box-shadow 0 0 10px 0 rgba(162, 116, 14, 0.7), 0 0 15px 0 rgba(34, 28, 4, 0.4) inset
    transition all 0.3s ease

    .info-container
        text-align center
        margin 20px auto

    .fields-container
        > div
            margin 20px 0
            transition all 0.3s ease
            > label
                font-family Arial, monospace
            > textarea,
            > input[type=text]
            > input[type=password],
            > input[type=email],
                display block
                width 100%
                padding 10px
            .info
                margin 5px 0

    .submit-container
        .info
            margin-top 15px

    .info
        linkButton
            color empColor4
            text-shadow none
            transition all 0.5s ease-out
        linkButton:hover
            color #e2c5a3
            text-shadow 0 0 2px #c4a25e

.form,
form
    > div // containers
        margin 30px 0
    > div:last-child
        margin-bottom 0
    > div:first-child
        margin-top 0

.form
    textarea,
    input,
    .input-area
        padding 10px
        font-size 1rem
        color textColor1
        border 1px solid colorShadow
        transition all 0.3s ease
        border-radius 3px
        box-sizing border-box
        background input-bg
        box-shadow input-box-shadow

    textarea
        resize vertical
        transition border-color 0.3s ease

    input[type=button],
    input[type=submit]
        background linear-gradient(20deg, rgba(45, 36, 13, 0.4) 0%, rgba(90, 56, 25, 0.7) 50%, rgba(55, 43, 16, 0.4) 100%) 50% 50% no-repeat
        width 100%
        padding 10px
        text-align center
        border-color empColor3
        cursor pointer
    input[type=button]:hover,
    input[type=submit]:hover
        box-shadow inset 0 0 20px rgb(195, 162, 127), 0 0 15px rgb(255, 235, 164)

    textarea:focus,
    input[type=text]:focus,
    input[type=email]:focus,
    input[type=password]:focus
        outline 0
        border-color empColor1
        box-shadow  0 0 10px 0 rgb(179, 139, 38) inset, 0 0 15px 0 rgba(162, 116, 14, 0.8)


    .error
        *
            color #ff8e72
        textarea,
        input
            border-color #ff8e72
            //animation error 3s forwards
    .success
        *
            color #c4ff72
        textarea,
        input
            border-color #c4ff72
            //animation success 3s forwards


@media ({mobile})
    .form
        padding-left 10px
        padding-right 10px
