@require 'animations.styl'
@require 'constants.styl'

side-item-gradient = "linear-gradient(%s, rgba(184, 134, 11, 0.3) 30%, rgba(218, 165, 32, 0) 100%) 0 100% no-repeat"

html
    overflow-x hidden

body
    margin 0
    max-width 100vw
    width 100vw
    min-height 100vh
    position relative
    color textColor1
    background linear-gradient(-20deg, empColor1 0%, bgColor1 70%)
    animation bg-move 3s ease normal forwards
    overflow-x hidden
    box-sizing border-box
    > *
        box-sizing border-box
#app
    width 100%
    height 100%
    transition opacity 0.2s ease

linkButton
    cursor pointer
    display inline-block


@keyframes bg-move
    from
        background-position 100%
        background-size 1000%

    to
        background-position 0
        background-size 300%


.absolute-wrapper
    position relative
.absolute-wrapper > *
    position absolute


.top
    top 0
.left
    left 0
    text-align left
.right
    right 0
    text-align right
.bottom
    bottom 0
.center
    left 50%
    top 50%
    transform translate(-50%, -50%)
    text-align center


.info-plate
    background linear-gradient(20deg, rgba(90, 56, 25, 0.9) 0%, rgba(55, 43, 16, 0.5) 100%) 50% 50% no-repeat
    box-shadow 0 0 10px 0 rgba(162, 116, 14, 0.8), 0 0 15px 0 rgba(34, 28, 4, 0.5) inset
    text-align center
    padding 10px
    > div
        margin-top 20px
        margin-bottom 20px


.side-item.left
    background side-item-gradient % 90deg
    background-size 100% 1px
.side-item.right
    background side-item-gradient % -90deg
    background-size 100% 1px



.lighting-text
    font-size 30px
    text-shadow textLightingHigh

.text
    text-shadow none
    font-size 15px
    font-family Arial, monospace
    color textColor3

.text-max
    text-shadow textLightingHigh2
    font-size 40px
    font-family Arial, monospace
    color textColor1

.text-big-x
    text-shadow textLightingNormal1
    font-size 30px
    font-family Roboto, monospace
    color textColor1

.text-big
    text-shadow textLightingNormal1
    font-size 20px
    font-family Roboto, monospace
    color textColor2

.text-middle
    text-shadow textLightingNormal2
    font-size 18px
    font-family Roboto, monospace
    color textColor2

.text-small
    text-shadow none
    font-size 13px
    font-family Arial, monospace
    color textColor4



.image-big
    max-width 50%
    max-height 100vh
    border-radius 10px
    box-shadow 0 0 10px 0 rgba(162, 116, 14, 0.8), 0 0 15px 0 rgba(34, 28, 4, 0.5) inset
.image-small
    width  20px
    height 20px
    border-radius 50%


.fullwidth
    width 100%
    box-sizing border-box


.centered-horizontal
    margin-left auto
    margin-right auto
.centered-vertical
    margin-top auto
    margin-bottom auto

.pc-hide
    display none
@media (max-width 700px)
    *
        transition opacity 0.3s, transform 0.2s !important

    .mobile-hide
        display none
    .pc-hide
        display block

    .navbar linkbutton
        font-size 20px
