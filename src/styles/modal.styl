@require 'constants.styl'

close-btn-size = 25px

.modal-background
    position fixed

    top 0
    width 100%
    height 100vh
    z-index 999

    background-color colorShadow

    .modal
        margin-top 200px

        .form
            background linear-gradient(35deg,rgb(14 12 5),#583a18 50%,rgb(22 18 7))

        .close-btn
            position absolute
            color textColor2
            text-shadow textLightingNormal2
            right 20px
            top 10px
            width close-btn-size
            height close-btn-size
            transition all 0.3s ease
            cursor pointer
        .close-btn:hover
            color textColor1
            text-shadow textLightingNormal1

        .submit-container
            width 100%
            display flex
            > *
                flex 1
                margin-left 10px
                margin-right 10px
