.show
    animation show 0.3s linear forwards
.showed
    animation none
.hide
    animation hide 0.3s linear forwards
.hidden
    display none !important

@keyframes hide
    0%
        opacity 1
    100%
        opacity 0
@keyframes show
    0%
        opacity 0
    100%
        opacity 1


.roll-closed
    transition height 0.3s ease
    overflow-y hidden
    height 0 // js animable
